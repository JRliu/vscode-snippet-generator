{
    "compilerOptions": {
        "target": "es6",
		"module": "ES2020",
		"noImplicitAny": true, 
		"sourceMap": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"listFiles": true,
		"pretty": true,
		"moduleResolution": "node",
		"noEmitOnError": false,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true,
        "declaration": true,
        "lib": ["dom", "es2016"]
    },
    "include": [
        "./src/**/*.ts"
    ]
}